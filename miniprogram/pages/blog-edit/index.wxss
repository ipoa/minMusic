.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #e7e7e7;
}

.content:hover,
.content:focus {
  border-color: #00a1d6;
}

.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 10px 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.words-num {
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
}

.publish-btn {
  background-color: #d43c33;
  color: #fff;
  width: 160rpx !important;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.publish-btn:active {
  opacity: .8;
}

/* 图片样式 */

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.image {
  width: 100%;
  height: 100%;
}

.icon-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.select-photo {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}

.icon-add {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}