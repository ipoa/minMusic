.container {
  position: relative;
  align-items: center;
  margin-left: 20rpx;
  display: flex;
}
.search-other{
  position: absolute;
  left: 8rpx;
  font-size: 48rpx;
  color: #ccc;
  line-height: 68rpx;
}
.search-bar {
  font-size: 48rpx;
  line-height: 68rpx;
}

.input-bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  padding-right: 166rpx;
  border-radius: 50rpx;
}

.input-placeholder {
  color: #ccc;
}
.search-btn{
  position: absolute;
  top: 5rpx;
  right: 6rpx;
  z-index: 8;
  margin-left: 20rpx!important;
  font-size: 24rpx;
  color:#fff;
  padding: 8rpx 12px;
  transition:background-color .2s;
  width: 140rpx !important;
  height: 58rpx !important;
  line-height: 48rpx;
  border-radius: 50rpx;
  background-color: #d43c33;
}
.search-btn:active{
  background-color: rgba(212,60,51, 0.6)
}