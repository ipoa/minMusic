<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-index="{{index}}" bindtap="switchTab">
    <cover-image src="{{current === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
    <cover-view style="color: {{current === index ? selectedColor : color}}">{{item.text}}</cover-view>
  </cover-view>
</cover-view>